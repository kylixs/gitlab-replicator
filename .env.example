# GitLab Mirror 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ==================== 数据库配置 ====================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gitlab_mirror
DB_USERNAME=gitlab_mirror
DB_PASSWORD=mirror_pass_123

# MySQL Root 密码（仅用于 Docker）
MYSQL_ROOT_PASSWORD=root_password_123

# ==================== Redis 配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass_123

# ==================== GitLab 源配置 ====================
SOURCE_GITLAB_URL=http://localhost:8000
SOURCE_GITLAB_TOKEN=glpat-QfaqawuLrzcPfJ3oEgiStG86MQp1OjEH.01.0w01363lq

# ==================== GitLab 目标配置 ====================
TARGET_GITLAB_URL=http://localhost:9000
TARGET_GITLAB_TOKEN=glpat-b2nrFAAy9q2SozZr3Dm0N286MQp1OjEH.01.0w0t2khzm
# Mirror URL for container-to-container access (if running GitLab in Docker)
# Use host.docker.internal on Mac/Windows, or host IP on Linux
TARGET_GITLAB_MIRROR_URL=http://host.docker.internal:9000

# ==================== API 服务配置 ====================
API_HOST=0.0.0.0
API_PORT=8080
API_TOKEN_1=your-api-token-here

# ==================== Pull Sync 配置 ====================
PULL_SYNC_ENABLED=true
PULL_SYNC_BASE_PATH=/opt/gitlab-mirror/repos
PULL_SYNC_PEAK_HOURS=9-18
PULL_SYNC_PEAK_CONCURRENT=3
PULL_SYNC_OFF_PEAK_CONCURRENT=8

# ==================== Webhook 配置 ====================
WEBHOOK_SECRET_TOKEN=your-webhook-secret-token-here
WEBHOOK_ENABLED=true

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FILE=/var/log/gitlab-mirror/service.log

# ==================== 开发环境配置 ====================
SPRING_PROFILES_ACTIVE=dev
